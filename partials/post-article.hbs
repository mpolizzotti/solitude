{{#post}}
<article class="{{post_class}} post-article">
    <section class="post-article-byline">
        <p><span>By</span> <span>{{author}}</span></p>
        <p>
            <i class="fa fa-clock-o" aria-hidden="true"><span class="sr-only">Clock icon.</span></i>
            <span>Updated</span>
            <time class="date" datetime="{{date updated_at format="h:m a, dddd MMMM DD, YYYY"}}">{{date updated_at format="h:m a, dddd MMMM DD, YYYY"}}</time>
        </p>
    </section>
    <section class="post-article-content">
        {{content}}
    </section>
    <section class="post-article-share">
        <div class="social-media">
            <h4 class="social-media-title">Share</h4>
            <ul class="list-unstyled social-media-list">
                <li class="social-media-list-item">
                    <a class="social-media-icon" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}" target="_blank">
                        <i class="fa fa-twitter"><span class="sr-only">Twitter</span></i>
                    </a>
                </li>
                <li class="social-media-list-item">
                    <a class="social-media-icon" href="https://plus.google.com/share?url={{url absolute="true"}}" target="_blank">
                        <i class="fa fa-google-plus"><span class="sr-only">Google+</span></i>
                    </a>
                </li>
            </ul>
        </div>
    </section>
    <section class="post-article-author">
            {{#author}}
            <div class="post-author">
                <div class="post-author-avatar">
                    <div class="brand-avatar">
                        <img class="brand-avatar-inner" src="{{profile_image}}" alt="{{name}}">
                    </div>
                </div>
                {{/author}}

                <div class="post-author-meta">
                    <h4 class="post-author-title">About The Author</h4>
                    {{#author}}
                        {{#if bio}}
                            <p class="post-author-bio">{{bio}}</p>
                        {{else}}
                            <p class="post-author-bio">
                                <span>Read <a href="{{url}}">more posts</a> by this author.</span>
                            </p>
                        {{/if}}
                    {{/author}}
                    {{#has author="Matthew Polizzotti"}}
                        <div class="social-media">
                            <h4 class="social-media-title">Follow</h4>
                            <ul id="socialArticle" class="list-unstyled social-media-list">&nbsp;</ul>
                        </div>
                    {{/has}}
                </div>
            </div>
    </section>
    <section>
        {{> "comments"}}
    </section>
</article>
{{/post}}